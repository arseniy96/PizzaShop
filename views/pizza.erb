<h2>Pizza</h2>

<div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9">
        <div class="row">
          <% @pizza.each do |p|%>
            <div class="col-md-4">
              <div style="border: 2px solid lightgrey; border-radius: 15px; padding: 15px; padding-left: 28px; height: 260px">
                <p><img src="<%= p.path_to_image %> " width="200px" height="150px" align="center"></p>
                <p style="height: 25px">
                  <%= p.title %> &nbsp;&nbsp;
                  &nbsp;&nbsp;<b>Цена: <%= p.price %></b>
                  <% if p.is_veg%>
                    <img src="images/pizzaVeg_icon.jpg" width="25px">&nbsp;&nbsp;
                  <% end %>
                  <% if p.is_spicy%>
                      <img src="images/pizzaHot_icon.jpg" width="25px">&nbsp;&nbsp;
                  <% end %>
                </p>
                <button style="margin-left: 45px; padding-left: 30px; padding-right: 30px" type="button" class="btn btn-primary">Заказать</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

