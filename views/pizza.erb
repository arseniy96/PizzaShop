<h2>Pizza</h2>

<div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9">
        <div class="row">
          <% @pizza.each do |p|%>
            <div class="col-md-4" >
              <p><img src="<%= p.path_to_image %> " width="200px" height="150px"></p>
              <p><%= p.title %> Цена: <b><%= p.price %></b></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

