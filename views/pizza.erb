<h2>Pizza</h2>

<div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9">
        <div class="row">
          <% @pizza.each do |p|%>
            <div class="col-md-4" >
              <p><img src="<%= p.path_to_image %> " width="200px" height="150px"></p>
              <p>
                <%= p.title %> &nbsp;&nbsp;
                &nbsp;&nbsp;<b>Цена: <%= p.price %></b>
                <% if p.is_veg%>
                  <img src="images/pizzaVeg_icon.jpg" width="30px">&nbsp;&nbsp;
                <% end %>
                <% if p.is_spicy%>
                    <img src="images/pizzaHot_icon.jpg" width="30px">&nbsp;&nbsp;
                <% end %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

