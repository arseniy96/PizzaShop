<h2>Pizza</h2>

<div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-9">
        <div class="row">
          <% @pizza.each do |p|%>
            <div class="col-md-4">
              <div style="border: 2px solid lightgrey; border-radius: 15px; padding: 15px; padding-left: 28px; height: 335px">
                <p><img src="<%= p.path_to_image %> " width="200px" height="150px" align="center"></p>
                  <p style="font-size: 130%; height: 30px">
                    <%= p.title %>&nbsp;&nbsp;

                    <% if p.is_veg%>
                      <img src="images/pizzaVeg_icon.jpg" width="25px">&nbsp;&nbsp;
                    <% end %>
                    <% if p.is_spicy%>
                        <img src="images/pizzaHot_icon.jpg" width="25px">&nbsp;&nbsp;
                    <% end %>
                  </p>

                <p><b>Цена: <%= p.price %></b></p>
                <p style="color: #5e5e5e;"><%= p.description %></p>

                <button onclick="add_to_cart('<%= p.id %>')" style="float: left; width: 80px;" type="button" class="btn btn-success"> Add </button>
                <input type="text" class="form-control" style="width: 40px; float: left; margin-left: 8px">
                <button onclick="remove_to_cart('<%= p.id %>')" style="float: right; width: 80px;" type="button" class="btn btn-success">Remove</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

<script>
  $(function()
  {
    update_orders_input();
    update_orders_button();
  })
</script>
