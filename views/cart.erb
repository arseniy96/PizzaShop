<h2>Cart</h2>

<p>Here shows your orders</p>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Quantity</th>
  </tr>
  </thead>
  <tbody>
  <%= total_price = 0 %>
  <%= total_qty = 0 %>
  <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <%= total_price += item[0].price * item[1].to_i %>
      <%= total_qty += item[1].to_i %>
  <% end %>
  <tr>
    <td><b>Total</b></td>
    <td><b><%= total_price %></b></td>
    <td><b><%= total_qty %></b></td>
  </tr>
  </tbody>
</table>
