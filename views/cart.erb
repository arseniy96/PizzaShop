<h2>Cart</h2>

<p>Here shows your orders</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item[0].title %></td>
      <td><%= item[1] %></td>
      <td><%= item[0].price * item[1].to_i %></td>
    </tr>
    <% end %>
  </tbody>
</table>
