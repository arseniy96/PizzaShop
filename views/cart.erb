<h2>Cart</h2>

<div id="cart">
  <p>Here shows your orders</p>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
    </thead>
    <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
        <tr>
          <td><%= item[0].title %></td>
          <td><%= item[0].price %></td>
          <td><%= item[1] %></td>
        </tr>
        <% total_price += item[0].price * item[1].to_i %>
        <% total_qty += item[1].to_i %>
    <% end %>
    <tr>
      <td><b>Total</b></td>
      <td><b><%= total_price %></b></td>
      <td><b><%= total_qty %></b></td>
    </tr>
    </tbody>
  </table>

  <form action="/order" method="POST" role="form" class="visit-form" style="width: 30%">
    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>">
    <div class="form-group">
      <input name="order[username]" type="text" class="form-control" id="exampleInputName" placeholder="Your Name"
             value="">
    </div>
    <div class="form-group">
      <input name="order[phone]" type="text" class="form-control" id="exampleInputPhone" placeholder="Your Phone"
             value="">
    </div>
    <div class="form-group">
      <input name="order[address]" type="text" class="form-control" id="exampleInputAddress" placeholder="Your Address"
             value="">
    </div>

    <button type="submit" class="btn btn-primary">Order</button>
    <button class="btn btn-danger" onclick="return remove_all()">Remove all</button>
  </form>
</div>